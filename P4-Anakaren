import java.util.Scanner;

// Clase Coche
/*public*/ class Coche {
    
    // Constantes
    static final int MOVIMIENTO = 3;

    // Atributos
    public String color;
    public String marca;
    public String modelo;
    public int velocidad;
    public boolean encendido;

    // Constructor
    public Coche(String color, String marca, String modelo) {
        this.color = color;
        this.marca = marca;
        this.modelo = modelo;
        this.velocidad = 0;
        this.encendido = false;
    }

    // Métodos
    public void acelerar() {
        velocidad += MOVIMIENTO;
        System.out.println("Acelerando... Vas a " + velocidad + " km/h");
    }

    public void frenar() {
        velocidad -= MOVIMIENTO;
        if (velocidad < 0){
            velocidad = 0; // No permitir negativos
        }
        System.out.println("Frenando... Vas a " + velocidad + " km/h");
    }

    public void encender() {
        if (!encendido) {
            encendido = true;
            System.out.println("El coche se encendió");
        } 
        else {
            System.out.println("El coche ya estaba encendido.");
        }
    }

    public void apagar() {
        if (encendido) {
            encendido = false;
            velocidad = 0;
            System.out.println("El coche se apagó");
        } else {
            System.out.println("El coche ya estaba apagado");
        }
    }
    
    // Mostrar detalles del coche
    public void mostrarDetalles() {
        System.out.println("\nCoche en uso:");
        System.out.println("Marca: " + marca);
        System.out.println("Modelo: " + modelo);
        System.out.println("Color: " + color);
    }
}

// Main
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        // Crear coches
        System.out.println("--- Creando coches ---");
        
        System.out.println("\nVamos a crear el coche 1:");
        System.out.print("Dame un color: ");
        String color = sc.nextLine();
        System.out.print("Dame una marca: ");
        String marca = sc.nextLine();
        System.out.print("Dame un modelo: ");
        String modelo = sc.nextLine();
        Coche coche1 = new Coche(color, marca, modelo);

        System.out.println("\nVamos a crear el coche 2:");
        System.out.print("Dame un color: ");
        color = sc.nextLine();
        System.out.print("Dame una marca: ");
        marca = sc.nextLine();
        System.out.print("Dame un modelo: ");
        modelo = sc.nextLine();
        Coche coche2 = new Coche(color, marca, modelo);

        System.out.println("\nVamos a crear el coche 3:");
        System.out.print("Dame un color: ");
        color = sc.nextLine();
        System.out.print("Dame una marca: ");
        marca = sc.nextLine();
        System.out.print("Dame un modelo: ");
        modelo = sc.nextLine();
        Coche coche3 = new Coche(color, marca, modelo);
        
        // Seleccionar Coche
        boolean continuarPrograma = true;
        while (continuarPrograma) {
            Coche cocheSeleccionado = null;
            System.out.println("\n¿Qué auto desea usar? (1, 2, 3)");
            int op = sc.nextInt();
            sc.nextLine(); // Limpiar buffer
            switch (op) {
                case 1:
                    cocheSeleccionado = coche1;
                    cocheSeleccionado.mostrarDetalles();
                    break;
                case 2:
                    cocheSeleccionado = coche2;
                    cocheSeleccionado.mostrarDetalles();
                    break;
                case 3:
                    cocheSeleccionado = coche3;
                    cocheSeleccionado.mostrarDetalles();
                    break;
                default:
                    System.out.println("Opción no válida. Usando coche 1 por defecto.");
                    break;
            }
            
            // Menú de opciones
            boolean continuarCoche = true;
            while (continuarCoche) {
                System.out.println("\n¿Qué deseas hacer con este coche?");
                System.out.println("1. Encender");
                System.out.println("2. Acelerar");
                System.out.println("3. Frenar");
                System.out.println("4. Apagar");
                System.out.println("5. Salir");
                
                int opMenu = sc.nextInt();
                sc.nextLine(); // Limpiar buffer
                
                switch (opMenu) {
                    // Encender
                    case 1:
                        cocheSeleccionado.encender();
                        break;
                        
                    // Acelerar
                    case 2:
                        cocheSeleccionado.acelerar();
                        break;
                        
                    // Frenar
                    case 3:
                        if (cocheSeleccionado.velocidad > 0) {
                            cocheSeleccionado.frenar();
                            if (cocheSeleccionado.velocidad == 0) {
                                System.out.println("El coche está detenido. ¿Quieres apagarlo?");
                                System.out.println("1. Sí\t2. No");
                                int opApagar = sc.nextInt();
                                sc.nextLine();
                                if (opApagar == 1) {
                                    cocheSeleccionado.apagar();
                                    continuarCoche = false;
                                    continuarPrograma = false;
                                } 
                                else {
                                    System.out.println("¿Quieres acelerar o cambiar de coche?");
                                    System.out.println("1. Acelerar\t2. Cambiar de coche");
                                    int opExtra = sc.nextInt();
                                    sc.nextLine();
                                    if (opExtra == 1) {
                                        cocheSeleccionado.acelerar();
                                    }
                                    else {
                                        continuarCoche = false;
                                        continuarPrograma = false;
                                    }
                                }
                            }
                        } 
                        else {
                            System.out.println("El coche ya está detenido.");
                            System.out.println("¿Quieres apagarlo?");
                            System.out.println("1. Sí\t2. No");
                            int opApagar = sc.nextInt();
                            sc.nextLine();
                            if (opApagar == 1) {
                                cocheSeleccionado.apagar();
                                continuarCoche = false;
                                continuarPrograma = false;
                            } else {
                                System.out.println("¿Quieres acelerar o cambiar de coche?");
                                System.out.println("1. Acelerar\t2. Cambiar de coche");
                                int opExtra = sc.nextInt();
                                sc.nextLine();
                                if (opExtra == 1){
                                    cocheSeleccionado.acelerar();  
                                } 
                                else {
                                continuarCoche = false;
                                }
                            }
                        }
                        break;
                        
                    // Apagar
                    case 4:
                        cocheSeleccionado.apagar();
                        break;
                        
                    // Salir
                    case 5:
                        System.out.println("Estacionando todos los coches...");
                        System.out.println("Adiós :)");
                        break;
                    
                    // Default
                    default:
                        System.out.println("Opción no válida");
                        break;
                }
            }
        }
        sc.close();
    }
}
