import java.util.Scanner;

public class Coche{

	// Constantes
	static final int movimiento = 3;

	// Variables
	int velocidad = 0;
	boolean encendido = false;

	// Argumentos
	public String color;
	public String marca;
	public String modelo;
	public int velocidad;

	// Constructor
	public Coche(String color, String marca, String modelo, int velocidad){
		this.color = color;
		this.marca = marca;
		this.modelo = modelo;
		this.velocidad = velocidad;
	}

	// Métodos
	public void acelerar(){
		velocidad += movimiento;
		System.out.println("Vas a " + velocidad + " km/h");
	}

	public void frenar(){
		velocidad -= movimiento;
		System.out.println("Vas a " + velocidad + " km/h");
	}

	public boolean encender(){
		if (encendido == true){
			System.out.println("El coche está encendido");
			return true;
		}
		else{
			System.out.println("El coche está apagado");
			return false;
		}
	}
}

public class Main {
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);

        // Variables para crear coche
        String color;
		String marca;
		String modelo;

		// Crear coches
		// Coche 1
        System.out.println("Vamos a crear el coche 1:");
        System.out.println("Dame un color");
        color = sc.nextLine();
        System.out.println("Dame una marca");
        marca = sc.nextLine();
        System.out.println("Dame un modelo");
        modelo = sc.nextLine();

        Coche coche1 = new Coche(color, marca, modelo, 0);

        // Coche 2
        System.out.println("Vamos a crear el coche 2:");
        System.out.println("Dame un color");
        color = sc.nextLine();
        System.out.println("Dame una marca");
        marca = sc.nextLine();
        System.out.println("Dame un modelo");
        modelo = sc.nextLine();
        
        Coche coche2 = new Coche(color, marca, modelo, 0);

        // Coche 3
        System.out.println("Vamos a crear el coche 3:");
        System.out.println("Dame un color");
        color = sc.nextLine();
        System.out.println("Dame una marca");
        marca = sc.nextLine();
        System.out.println("Dame un modelo");
        modelo = sc.nextLine();
        
        Coche coche3 = new Coche(color, marca, modelo, 0);


        // Menú de opciones
        int op;
        do{
            System.out.println("\n¿Qué coche quieres usar?");
            System.out.println("1. Coche 1");
            System.out.println("2. Coche 2");
            System.out.println("3. Coche 3");
            System.out.println("4. Salir");
            
            System.out.print("\nSeleccione una opción: ");
            op = sc.nextInt();
            
            switch (op){
                case 1:
int opcionAccion;
do {
    System.out.println("\n¿Qué deseas hacer con este coche?");
    System.out.println("1. Encender");
    System.out.println("2. Acelerar");
    System.out.println("3. Frenar");
    System.out.println("4. Apagar");
    System.out.println("5. Cambiar de coche");

    opcionAccion = sc.nextInt();

    switch(opcionAccion) {
        case 1:
            coche.encender();
            break;
        case 2:
            if (coche.encendido) coche.acelerar();
            else System.out.println("Primero debes encender el coche.");
            break;
        case 3:
            if (coche.encendido) {
                coche.frenar();
                if (coche.velocidad <= 0) {
                    System.out.println("El coche ya está detenido. ¿Quieres apagarlo? (s/n)");
                    char resp = sc.next().charAt(0);
                    if (resp == 's' || resp == 'S') {
                        coche.apagar();
                    }
                }
            } else {
                System.out.println("El coche está apagado.");
            }
            break;
        case 4:
            coche.apagar();
            break;
        case 5:
            System.out.println("Cambiando de coche...");
            break;
        default:
            System.out.println("Opción no válida.");
    }
} while (opcionAccion != 5);
                    break;
                    
                case 2:
                    
                    break;
                    
                case 3:
                    
                    break;
                    
                case 4:
                    System.out.println("\nAdiós... :)");
                    break;
                    
                default:
                    System.out.println("\nOpción no válida");
                continue;
            }
        } while (op != 4);
        
        sc.close();
    }
}
