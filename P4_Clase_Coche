import java.util.Scanner;

public class Coche3 {
		String color;
		String marca;
		String modelo;
		int velocidad;
		final movimiento = 3;

		//Creamos el constructor:
		public Coche3 (String color, String marca, String modelo, int velocidad) {
			this.color = color;
			this.marca = marca;
			this.modelo = modelo;
			this.velocidad = 0; 
		}

		//Creamos los métodos de la clase 
		pubic void acelerar(int velAumento) {
			this.velocidad = this.velocidad + movimiento;
			System.out.println("El coche aumentó su velocidad a " + this.velocidad + "km/h.\n");
		}

		public void frenar (int velDecremento) {
			this.velocidad = this.velocidad - movimiento;
			if (this.velocidad < 0) {
				this.velocidad = 0;
				System.out.println("El coche se ha frenado por completo.\n");
			}
			System.out.println("El coche redujo su velocidad a " + this.velocidad + " km/h.");
		}

		public void encender( boolean encendido) {
			if (encendido == true) {
			System.out.prinln("El coche está encendido...\n");
			}
		}

		public void descripcion() {
			System.out.prinln("Este automovil es un \n" + this.modelo + " \nde la marca" + this.marca + "\n color");
		}

