//Computadora
public class Computadora {
    
    // Atributos
    private String nombre;
    private boolean status; // true = disponible, false = ocupada

    // Constructor
    public Computadora(String nombre) {
        this.nombre = nombre;
        this.status = true;
    }
    
    // Métodos
    public void mandarImprimir() {
        System.out.println("Tu documento se envió a la fila de impresión :)");
    }
    
    public void usarComputadora() {
        System.out.println("Puedes usar la computadora :)");
        this.status = false; // marcamos como ocupada
    }

    // Getter
    public String getNombre() {
        return this.nombre;
    }
    
    public String getStatus() {
        return this.status ? "Disponible :)" : "Ocupada :(";
    }
    
    // Setter
    public void setStatus(boolean status) {
        this.status = status;
    }
}
